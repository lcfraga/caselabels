{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["mocha"],
  "extends": ["standard", "plugin:mocha/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "overrides": [
    {
      "files": ["*.integration.js"],
      "rules": {
        "no-unused-expressions": "off",
        "handle-callback-err": "off"
      }
    },
    {
      "files": ["users.integration.js"],
      "rules": {
        "mocha/no-setup-in-describe": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {}
}
